{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.js",
    "*.vue",
    "**/*.vue",
    "**/*.js"
  ],
  "exclude": ["node_modules", "dist"]
}
